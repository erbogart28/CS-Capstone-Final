<h3>Browse Courses</h3>

<div class = "col-lg-4 col-md-4 col-sm-4 col-xs-6" style="float:right;margin-top:2%;margin-bottom:2%">
<%= form_tag(browse_courses_path, method: :get) do %>
  <%= text_field_tag :term, params[:term] %>
  <div style="width:50%;float:right">
  <%= submit_tag 'Search', name: nil %>
  </div>
<% end %>
</div>

<div class="panel panel-default">
        <div class="panel-body">
		<table class="table table-responsive">
		  <thead>
		    <tr>
				      <th>Name</th>
				      <th>Course code</th>
				      <th>Description</th>
				      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @browse_course.each do |browse_course| %>
		      <tr>
					<td><%= browse_course.name %></td>
					<td><%= browse_course.course_code %></td>
					<td><%= browse_course.description %></td>
					<td><%= link_to 'Show', browse_course_path(browse_course), class:"btn btn-primary btn-xs color-white" %> </td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
        <div class="panel-footer">
        </div>
</div>
