<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 panel panel-default">
        <div class="panel-body">
			<div class="margin-vertical">
			  <strong>Course code:</strong>
			  <%= @browse_course.course_code %>
			</div>
			<div class="margin-vertical">
			  <strong>Name:</strong>
			  <%= @browse_course.name %>
			</div>
			<div class="margin-vertical">
			  <strong>Description:</strong>
                <%= simple_format((@browse_course.description).split(/(PREREQUISITE\(S\)|PREREQUISITE|Prerequisite(s)|PREREQUISITES)/, -1)[0] || [ @browse_course.description + "<br /><br />PREREQUISITE(S): None"] )  %>
			</div>
			<div class="margin-vertical">
        <strong>Prerequisite(s):</strong>
        <% if @browse_course.prereqs %>
          <%= @browse_course.prereqs %>
        <% else %>
          None
        <% end %>
			 </div>
		</div>

        <div class="panel-footer">
		<%= link_to 'Back', browse_courses_path, class:"btn btn-xs btn-default color-white" %>
	</div>
</div>
