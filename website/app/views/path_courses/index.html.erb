<p id="notice"><%= notice %></p>

<h3>Path Courses</h3>

<div class="panel panel-default">
        <div class="panel-body">
		<table class="table table-responsive">
		  <thead>
		    <tr>
				      <th>Path</th>
				      <th>Course</th>
				      <th>Year</th>
				      <th>Course term</th>
				      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @path_courses.each do |path_course| %>
		      <tr>
					<td><%= path_course.path_id %></td>
					<td><%= path_course.course_id %></td>
					<td><%= path_course.year %></td>
					<td><%= path_course.course_term %></td>
					<td><%= link_to 'Show', path_course, class:"btn btn-primary btn-xs color-white" %> </td>
			<td><%= link_to 'Edit', edit_path_course_path(path_course), class:"btn btn-warning btn-xs color-white" %></td>
			<td><%= link_to 'Destroy', path_course, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-xs color-white" %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
        <div class="panel-footer">
		<%= link_to 'New Path Course', new_path_course_path, class:"btn btn-success color-white" %>
        </div>
</div>
