<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script>
$(document).ready(function(){
    $("#pull").click(function(){
        $(this).button('loading').delay(30000).queue(function(){
            $(this).button("reset");
            $(this).dequeue();
        }); 
    });   
});
</script>

<div class = "container">
  <div class="page-header">
    <h1>Admin Dashboard</h1>
  </div>
  
  <div class="flex-row row" id="admincards"> <!-- Start row 1 -->
      <div class="col-xs-12 col-sm-4 col-md-4">
          <div class="card">
              <div class="card-content">
                  <h4 class="card-title">Student/Faculty Lists and Views</h4>
                      <p class="aboutText">
                          Faculty and student account information. Ability to view as students and faculty.
                      </p>
                      <div class="access" style="margin-top:1%">
                          <%= link_to "Users & Faculty", users_path, :class => "btn btn-primary color-white" %>
                      </div>
              </div>
          </div>
      </div>

      <div class="col-xs-12 col-sm-4 col-md-4">
          <div class="card">
              <div class="card-content">
                  <h4 class="card-title">Pull Courses</h4>
                      <p class="aboutText">
                          Update course listings based off DePaul's listed courses.
                      </p>
                      <div class="access">
                          <%= link_to 'Upload Courses', pull_path, :class => "btn btn-primary loading color-white", :id => "pull", method: :post %>
                      </div>
              </div>
          </div>
      </div>
      
      <div class="col-xs-12 col-sm-4 col-md-4">
          <div class="card">
              <div class="card-content">
                  <h4 class="card-title">Create Data Reports</h4>
                      <p class="aboutText">
                          Download a CSV file of all users and their essential contact information.
                      </p>
                      <div class="access">
                     <%= link_to 'Download CSV list', users_path(format: :csv), :class => "btn btn-primary color-white" %>                      
                     </div>
              </div>
          </div>
      </div>
  </div> <!-- End row 1-->
</div>