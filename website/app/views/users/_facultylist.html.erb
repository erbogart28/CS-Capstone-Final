<h3>Faculty List</h3>

<div class="panel panel-default">
        <div class="panel-body">
		<table class="table table-responsive">
		  <thead>
		    <tr>
				      <th>Username</th>
				      <th>Permission</th>
				      <th>View as</th>
				      <th>First</th>
				      <th>Last</th>
				      <th>Email</th>
				      <th>Degree</th>
				      <th>Course load</th>
				      <th>In class</th>
				      <th>Online</th>
				      <th>Path</th>
				      <th colspan="3"></th>
		    </tr>
		  </thead>
		  <tbody>
		  <% if @users = User.faculty %>
		    <% @users.each do |user| %>
		      <tr>
					<td><%= user.username %></td>
					<td><%= user.permission %></td>
					<td>View as <%= link_to user.first, impersonate_user_path(user), method: :post %></td>
					<td><%= user.view_as %></td>
					<td><%= user.first %></td>
					<td><%= user.last %></td>
					<td><%= user.email %></td>
					<td><%= user.degree_id %></td>
					<td><%= user.course_load %></td>
					<td><%= user.in_class %></td>
					<td><%= user.online %></td>
					<td><%= user.path_id %></td>
			<td><%= link_to 'Show', user, class:"btn btn-primary btn-xs color-white" %> </td>
			<td><%= link_to 'Edit', edit_user_path(user), class:"btn btn-warning btn-xs color-white" %></td>
			<td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-xs color-white" %></td>
		      </tr>
		    <% end %>
		    <% end %>
		  </tbody>
		</table>
	</div>
        <div class="panel-footer">
		<%= link_to 'New User', new_user_path, class:"btn btn-success color-white" %>
        </div>
</div>
