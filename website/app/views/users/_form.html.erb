<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: @user %>

  <%= f.label :first, "First Name" %>
  <%= f.text_field :first, class: 'form-control' %>

  <%= f.label :last, "Last Name" %>
  <%= f.text_field :last, class: 'form-control' %>
  
  <%= f.label :email, "School Email" %>
  <%= f.email_field :email, class: 'form-control' %>
  
  <%= f.label :school_id, "School ID #" %>
  <%= f.text_field :school_id, class: 'form-control' %>

  <%= f.label :password %> 
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation, "Password Confirmation" %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>