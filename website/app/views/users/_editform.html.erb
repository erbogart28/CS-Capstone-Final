<% provide(:title, 'Edit user') %>
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.text_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :permission %>
    <%= f.text_field :permission, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :view_as %>
    <%= f.text_field :view_as, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :first %>
    <%= f.text_field :first, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :last %>
    <%= f.text_field :last, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :degree_id %>
    <%= f.number_field :degree_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :course_load %>
    <%= f.text_field :course_load, class: "form-control" %>
  </div>
  
  <% if current_user.admin? %>
    <div>
      <%= f.label :roles, "student, faculty, or admin" %>
      <%= f.text_field :role, class: "form-control" %>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :in_class %>
    <%= f.number_field :in_class, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :online %>
    <%= f.number_field :online, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :path_id %>
    <%= f.number_field :path_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :deleted %>
    <%= f.number_field :deleted, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit yield(:button_text), class:"btn btn-primary" %>
  </div>
<% end %>