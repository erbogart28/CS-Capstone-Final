<% if false %>

<% provide(:title, 'All users') %>
<h1>All users</h1>

<container id = "list all users">
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%=link_to userinfo = user.first + ', ' + user.last, user %>
      <%= gravatar_for user, size: 50 %>
      </br>
      <div>ID #<%= user.school_id %></div>
    </li>
  <% end %>
</ul>
</container>

<% end %>

<h3>Users</h3>

<div class="panel panel-default">
        <div class="panel-body">
		<table class="table table-responsive">
		  <thead>
		    <tr>
				      <th>Username</th>
				      <th>Password</th>
				      <th>Permission</th>
				      <th>View as</th>
				      <th>First</th>
				      <th>Last</th>
				      <th>Email</th>
				      <th>Degree</th>
				      <th>Course load</th>
				      <th>In class</th>
				      <th>Online</th>
				      <th>Path</th>
				      <th>Deleted</th>
				      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @users.each do |user| %>
		      <tr>
					<td><%= user.username %></td>
					<td><%= user.password %></td>
					<td><%= user.permission %></td>
					<td><%= user.view_as %></td>
					<td><%= user.first %></td>
					<td><%= user.last %></td>
					<td><%= user.email %></td>
					<td><%= user.degree_id %></td>
					<td><%= user.course_load %></td>
					<td><%= user.in_class %></td>
					<td><%= user.online %></td>
					<td><%= user.path_id %></td>
					<td><%= user.deleted %></td>
					<td><%= link_to 'Show', user, class:"btn btn-primary btn-xs color-white" %> </td>
			<td><%= link_to 'Edit', edit_user_path(user), class:"btn btn-warning btn-xs color-white" %></td>
			<td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-xs color-white" %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
        <div class="panel-footer">
		<%= link_to 'New User', new_user_path, class:"btn btn-success color-white" %>
        </div>
</div>
