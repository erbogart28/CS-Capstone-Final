<h3>Courses</h3>

<div class="panel panel-default">
        <div class="panel-body">
		<table class="table table-responsive">
		  <thead>
		    <tr>
				      <th>Course Code</th>
				      <th>Name</th>
				      <th>Description</th>
				      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @courses.each do |course| %>
		      <tr>
					<td><%= course.course_code %></td>
					<td><%= course.name %></td>
					<td><%= course.description %></td>
					<td><%= link_to 'Show', course, class:"btn btn-primary btn-xs color-white" %> </td>
			<td><%= link_to 'Edit', edit_course_path(course), class:"btn btn-warning btn-xs color-white" %></td>
			<td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-xs color-white" %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
        <div class="panel-footer">
		<%= link_to 'New Course', new_course_path, class:"btn btn-success color-white" %>
        </div>
</div>
