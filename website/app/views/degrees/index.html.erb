<p id="notice"><%= notice %></p>

<h3>Degrees</h3>

<div class="panel panel-default">
        <div class="panel-body">
		<table class="table table-responsive">
		  <thead>
		    <tr>
				      <th>Major</th>
				      <th>Concentration</th>
				      <th>Degree reqs</th>
				      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @degrees.each do |degree| %>
		      <tr>
					<td><%= degree.major %></td>
					<td><%= degree.concentration %></td>
					<td><%= degree.degree_reqs_id %></td>
					<td><%= link_to 'Show', degree, class:"btn btn-primary btn-xs color-white" %> </td>
			<td><%= link_to 'Edit', edit_degree_path(degree), class:"btn btn-warning btn-xs color-white" %></td>
			<td><%= link_to 'Destroy', degree, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-xs color-white" %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
        <div class="panel-footer">
		<%= link_to 'New Degree', new_degree_path, class:"btn btn-success color-white" %>
        </div>
</div>
