<div class="page-header">
<h1>Student Dashboard: <%= current_user.first %> <%= current_user.last %></h1>
</div>

<div class ="container" id="studentCompletedCourses">
  <div class="panel panel-info">
    <div class="panel-heading">
      <a data-toggle="collapse" href="#collapse2"><strong>Completed Courses</strong></a>
    </div>
    <div class="panel-body collapse in" id="collapse2">
    <table class="table table-responsive">
  	  <thead>
  	    <tr>
  	      <th>Name</th>
  	      <th>Course code</th>
  	      <th colspan="2"></th>
  	    </tr>
  	  </thead>
  	  <tbody>
        <% @courses_taken.each do |f| %>
          <tr>
            <div class="margin-vertical">
              <td> <%= f.name %> </td>
              <td> <%= f.course_code %> </td>
            </div>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>

<div class ="container" id="studentReportHistory">
  <div class="panel panel-info">
    <div class="panel-heading ">
      <a data-toggle="collapse" href="#collapse1"><strong>Past Reports</strong></a>
    </div>
    <div class="panel-body collapse in" id="collapse1">
      <table class="table table-responsive">
    	  <thead>
    	    <tr>
    	      <th>Starting Quarter</th>
    	      <th>Degree</th>
    	      <th>Concentraion</th>
    	      <th>Course Load</th>
    	       <th>Show</th>
    	      <th>Delete</th>
    	      <th colspan="6"></th>
    	    </tr>
    	  </thead>
      <tbody>
      <% @user.when_ifs.each do |f| %>
        <tr>
          <td><%= f.start_quarter %></td>
          <td><%= f.degree_id %></td>
          <td><%= f.concentration %></td>
          <td><%= f.course_load %></td>
          <td><%= link_to 'Show', when_if_path(f.id), class: "btn btn-primary btn-xs color-white" %></td>
          <td><%= link_to 'Destroy', when_if_path(f.id), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-xs color-white" %></td>
        </tr>  
        <% end %>
      </tbody>
    </table>
  </div>
</div>

