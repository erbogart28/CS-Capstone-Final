<p id="notice"><%%= notice %></p>

<h3><%= plural_table_name.titleize %></h3>

<div class="panel panel-default">
        <div class="panel-body">
		<table class="table table-responsive">
		  <thead>
		    <tr>
		<% attributes.reject(&:password_digest?).each do |attribute| -%>
		      <th><%= attribute.human_name %></th>
		<% end -%>
		      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
		      <tr>
		<% attributes.reject(&:password_digest?).each do |attribute| -%>
			<td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
		<% end -%>
			<td><%%= link_to 'Show', <%= singular_table_name %>, class:"btn btn-primary btn-xs color-white" %> </td>
			<td><%%= link_to 'Edit', edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class:"btn btn-warning btn-xs color-white" %></td>
			<td><%%= link_to 'Destroy', <%= singular_table_name %>, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-xs color-white" %></td>
		      </tr>
		    <%% end %>
		  </tbody>
		</table>
	</div>
        <div class="panel-footer">
		<%%= link_to 'New <%= singular_table_name.titleize %>', new_<%= singular_table_name %>_path, class:"btn btn-success color-white" %>
        </div>
</div>
